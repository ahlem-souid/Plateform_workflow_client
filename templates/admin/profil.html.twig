{% extends 'Clientheritage.html.twig' %}

{% block body %}
    <div id="">
        {{include ('view/affiche.html.twig') }}
    </div>
    <section id="main-content">
    <section class="wrapper">
    
 <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"> Liste des intervenants/Fiche intervenats </li>
  </ol>
             

    </div>
<table class="table table-hover" style="margin:20px;">
    <tbody>

    <tr>
        <th>societe</th>
        <td>{{user.companyName }}</td>
    </tr>
    <tr>
        <th>Nom complet</th>
        <td>{{ user.responsableName }}</td>
    </tr>

    <tr>
        <th>Email</th>
        <td>{{ user.email }}</td>
    </tr>
 <tr>
        <th>Roles</th>
        <td>
         {% for role in user.roles %}
                    
                    {% if role == "ROLE_RESPB" %}
                    RESPONSABLE B2B
                    {% elseif role == "ROLE_RESPT" %}
                        RESPONSABLE technique
                    {% elseif role =="ROLE_ADMIN" %}
                    administrateur
                     {% elseif role =="ROLE_CLIENT" %}
                    CLIENT
                    {% endif %}
                 {% endfor %} 
             </td>
              <tr>
             <th>Etat</th>
             <td>
              {% if user.enabled > 0%}
                 active
              {% elseif user.enabled == false %}
               non-active
              {% endif %} 
            
                </td>
                 </tr> 
    </tr></tbody>
</table>
         <button class="btn"  type="submit" onclick="window.location.href='{{ path('utilisateurs') }}'">Retour</button>

{% endblock %}